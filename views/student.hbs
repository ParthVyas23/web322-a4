<div class="row">
    <div class="col-md-12">
        <h2>{{student.firstName}} {{ student.lastName}} - Student: {{ student.studentID}}</h2>
        <hr />
        <form method="post" action="/student/update">
            <fieldset>
                <legend>Personal Information</legend>
                <input type="hidden" name="studentID" value="{{student.studentID}}">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{ student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{ student.lastName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input class="form-control" id="email" name="email" type="email" value="{{student.email}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input class="form-control" id="SSN" name="SSN" type="text" value="{{student.SSN}}" readonly />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressStreet">Address (Street):</label>
                        <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{student.addressStreet}}" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressCity">Address (City):</label>
                        <input class="form-control" id="addresscity" name="addressCity" type="text" value="{{student.addressCity}}" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressState">Address (State):</label>
                        <input class="form-control" id="addressState" name="addressState" type="text" value="{{student.addressState}}" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressPostal">Address (ZIP Code):</label>
                        <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{student.addressPostal}}" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="status">Status:</label><br>
                        <label class="checkbox-inline">
                            <input type="radio" id="statusFT" name="status" value="Full Time" {{#equal student.status "Full Time"}}checked{{/equal}} /> Full Time
                        </label>

                        <label class="checkbox-inline">
                            <input type="radio" id="statusPT" name="status" value="Part Time"  {{#equal student.status "Part Time"}}checked{{/equal}}/> Part Time
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="program">Program:</label>
                        <select class="form-control" name="program" id="program">
                            <option value="ACF" {{#equal student.Program "ACF"}} selected {{/equal}}>Accounting and Finance</option>
                            <option value="AVO" {{#equal student.program "AVO"}} selected {{/equal}}>Aviation Operations</option>
                            <option value="DAN" {{#equal student.program "DAN"}} selected {{/equal}}>3D Animation</option>
                            <option value="CPP" {{#equal student.program "CPP"}} selected {{/equal}}>Computer Programming</option>
                            <option value="CPA" {{#equal student.program "CPA"}} selected {{/equal}}>Computer Programming and Analysis</option>
                            <option value="CTY" {{#equal student.program "CTY"}} selected {{/equal}}>Computer Systems Technology</option>
                            <option value="CSN" {{#equal student.program "CSN"}} selected {{/equal}}>Computer Systems Technician</option>
                            <option value="BSD" {{#equal student.program "BSD"}} selected {{/equal}}>Software Development (Honours Bachelor of Technology)</option>
                            <option value="IFS" {{#equal student.program "IFS"}} selected {{/equal}}>Informatics and Security(Honours Bachelor of Technology)</option>
                            <option value="DAS" {{#equal student.program "DAS"}} selected {{/equal}}>Data Science and Analytics program (Honours Bachelor of Technology)</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="expectedCredential">Expected Credential: </label>
                        <input class="form-control" id="Credential" name="expectedCredential" type="text" value="{{student.expectedCredential}}" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="registrationDate">Registration Date:</label>
                        <input class="form-control" id="registrationDate" name="registrationDate" type="text" value="{{student.registrationDate}}" readonly />
                    </div>
                </div>
            </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Student" /><br /><br /><br />
        </form>
    </div>
</div>
